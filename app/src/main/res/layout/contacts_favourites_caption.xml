<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232121"
    android:orientation="vertical">
    <!-- Line ABOVE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CBCBCE" />

    <LinearLayout
        android:id="@+id/favouritesBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/addToFavImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="4dp"
            android:src="@drawable/favstartransparent"
            app:layout_constraintStart_toStartOf="@id/textAddChangePhoto" />

        <TextView
            android:id="@+id/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:gravity="start|center"
            android:paddingBottom="1dp"
            android:text="@string/favorites"
            android:textColor="#FDFDFD"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Line BELOW -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBCBCE" />
</LinearLayout>
