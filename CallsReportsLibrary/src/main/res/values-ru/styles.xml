<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationItemStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:itemBackground">@color/blue_500</item>
    </style>

    <style name="BottomNavigationView.TextAppearance.Active" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">22sp</item> <!-- Desired font size for active items -->
        <item name="android:textColor">@color/white</item> <!-- Optional: text color for active items -->
    </style>

    <!-- Inactive (unselected) menu item text appearance -->
    <style name="BottomNavigationView.TextAppearance.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item> <!-- Desire   d font size for inactive items -->
        <item name="android:textColor">@color/white</item> <!-- Optional: text color for inactive items -->
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

